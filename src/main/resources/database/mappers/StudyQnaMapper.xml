<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.goody.diet.board.studyqna.StudyQnaDAO">
  	
  	<sql id="qnaCondition">
	  	<trim prefix="where" suffixOverrides="and">
			STUDYNUM=#{studyNum} AND
			
			<if test="kind == 'title'">
				TITLE LIKE '%'|| #{search} || '%'
			</if>
			
			<if test="kind == 'writer'">
				WRITER LIKE '%'|| #{search} || '%'
			</if>
		</trim> 
	</sql>
  	
  	<select id="getTotalCount" resultType="Long" parameterType="Pager">
  		SELECT COUNT(NUM) FROM STUDYQNA 
  			<include refid="qnaCondition"></include>
  	</select>
  	
   	<select id="getBoardList" resultType="StudyQnaDTO" parameterType="Pager">
  		<!-- SELECT * FROM STUDYQNA WHERE STUDYNUM=#{studyNum} -->
  		SELECT * FROM
  		(	
  			SELECT ROWNUM R, C.* FROM
  				(	SELECT * FROM STUDYQNA
  					<include refid="qnaCondition"></include>
					ORDER BY REF DESC, STEP ASC
				) C
		)
		WHERE R BETWEEN #{startRow} AND #{lastRow}   
  	</select>

  	<insert id="setBoardAdd" parameterType="StudyQnaDTO">
  		<selectKey keyProperty="num" resultType="Long" order="BEFORE">
  			SELECT QNA_SEQ.NEXTVAL FROM DUAL
  		</selectKey>
  		INSERT INTO STUDYQNA (NUM,STUDYNUM,TITLE,CONTENTS,WRITER,REGDATE,HIT,REF,STEP,DEPTH)
  		VALUES(#{num},#{studyNum},#{title}, #{contents}, #{writer},SYSDATE,0,#{num},0,0)
  	</insert>
  	
  	
  	<select id="getBoardDetail" resultType="StudyQnaDTO" parameterType="BoardDTO">
  		SELECT * FROM STUDYQNA WHERE NUM=#{num}
  	</select>
  	
  	<update id="setBoardUpdate" parameterType="BbsDTO">
 		UPDATE STUDYQNA SET TITLE=#{title}, CONTENTS=#{contents} WHERE NUM=#{num}
 	</update>
  	
